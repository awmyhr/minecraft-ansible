#!/bin/bash

# hit the namecheap server to upate the ip address
OLD_PUBLIC_IP=""

while true
do
    PUBLIC_IP=`curl http://169.254.169.254/latest/meta-data/public-ipv4`

    if [ "$OLD_PUBLIC_IP" != "$PUBLIC_IP" ];
    then
        curl "https://dynamicdns.park-your-domain.com/update?host={{ namecheap.host }}&domain={{ namecheap.domain }}&password={{ namecheap.password }}&ip=$PUBLIC_IP"
        OLD_PUBLIC_IP=$PUBLIC_IP
    fi
    sleep 30
done
